<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_cream"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="@color/text_primary"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:contentDescription="Close"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thêm Món Đồ"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"/>

            <TextView
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lưu"
                android:textColor="@color/primary_pink"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"/>

        </LinearLayout>

        <!-- Image Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/card_white"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivClothingImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Clothing image"/>

                <LinearLayout
                    android:id="@+id/uploadPrompt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@android:drawable/ic_menu_camera"
                        app:tint="@color/primary_pink"
                        android:layout_marginBottom="16dp"
                        android:contentDescription="Camera icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chụp hoặc chọn ảnh"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"/>

                    <Button
                        android:id="@+id/btnAddPhoto"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:text="Thêm ảnh"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_gradient_button"
                        android:layout_marginTop="16dp"/>

                </LinearLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- Form Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Name Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên món đồ"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etClothingName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_field"
                android:padding="12dp"
                android:hint="VD: Áo sơ mi trắng"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:layout_marginBottom="16dp"
                android:inputType="text"/>

            <!-- Type Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spinnerClothingType"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_field"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- Color Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Màu sắc"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etClothingColor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_field"
                android:padding="12dp"
                android:hint="VD: Trắng"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:layout_marginBottom="16dp"
                android:inputType="text"/>

            <!-- Brand Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thương hiệu (tùy chọn)"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etClothingBrand"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_field"
                android:padding="12dp"
                android:hint="VD: Zara"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:layout_marginBottom="16dp"
                android:inputType="text"/>

            <!-- Notes Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghi chú (tùy chọn)"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etClothingNotes"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/bg_input_field"
                android:padding="12dp"
                android:hint="Thêm ghi chú về món đồ này..."
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:layout_marginBottom="24dp"
                android:gravity="top"
                android:inputType="textMultiLine"/>

            <!-- Save Button -->
            <Button
                android:id="@+id/btnSaveItem"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Lưu vào tủ đồ"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@drawable/bg_gradient_button"
                android:elevation="4dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>

