<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions required for camera capture and gallery selection -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- For Android 13+, use READ_MEDIA_IMAGES; for older, READ_EXTERNAL_STORAGE -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" tools:targetApi="28" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" tools:targetApi="33" />
    <!-- For weather API -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobileApp">
        <activity
            android:name=".BodyScanCameraActivity"
            android:exported="false"
            android:label="Body Scan" />
        <activity
            android:name=".TestAllScreensActivity"
            android:exported="true"
            android:label="Test All Screens">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AllScreensActivity"
            android:exported="false"
            android:label="All Screens" />
        <activity
            android:name=".LayoutPreviewActivity"
            android:exported="false"
            android:label="Layout Preview" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OutfitSuggestionActivity"
            android:exported="false"
            android:label="Outfit Suggestions" />

        <!-- Fashion Assistant Activities -->
        <activity
            android:name=".Step1ScanActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Step2CameraActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Step1SuccessActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Step2PersonalInfoActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Step3PreferencesActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".DashboardActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AiOutfitActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AiOutfitGeneratorActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".WardrobeActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".VirtualTryOnActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
    </application>

</manifest>